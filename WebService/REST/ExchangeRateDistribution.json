  "components" : {
    "securitySchemes" : {
      "BasicAuth" : {
        "type" : "http",
        "scheme" : "basic"
      }
    },
    "schemas" : {
      "ExchangeRate" : {
        "type" : "object",
        "required" : [ "RateType", "CurrFrom", "CurrTo", "ValidFrom", "Rate", "RateInverse" ],
        "properties" : {
          "RateType" : {
            "type" : "string",
            "description" : "Alphanumeric code of exchange rate type defined by BMW.",
            "example" : "EURM"
          },
          "CurrFrom" : {
            "type" : "string",
            "description" : "ISO 4217 defined currency code. Alphabetic code valid only.",
            "example" : "EUR"
          },
          "CurrTo" : {
            "type" : "string",
            "description" : "ISO 4217 defined currency code. Alphabetic code valid only.",
            "example" : "USD"
          },
          "ValidFrom" : {
            "type" : "string",
            "format" : "date",
            "description" : "Date as of exchange rate is valid. Referring RFC 3339, section 5.6, for example, 2017-07-21"
          },
          "Rate" : {
            "type" : "number",
            "format" : "float",
            "description" : "Floating point value of exchange rate (indirect quotation). 1 EUR = 1.09434 USD",
            "example" : 1.09434
          },
          "RateInverse" : {
            "type" : "number",
            "format" : "float",
            "description" : "Floating point value of opposite exchange rate (direct quotation). 1 USD = 0.91332 EUR",
            "example" : 0.91332
          }
        }
      },
      "ExchangeRates" : {
        "type" : "array",
        "items" : {
          "$ref" : "#/components/schemas/ExchangeRate"
        }
      },
      "ReturnCode" : {
        "type" : "object",
        "required" : [ "code", "message" ],
        "properties" : {
          "code" : {
            "type" : "integer",
            "format" : "int32"
          },
          "message" : {
            "type" : "string"
          }
        }
      }
    }
  }
